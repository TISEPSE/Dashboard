{
  "name": "dashboard",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "cross-env NODE_ENV=production ELECTRON_BUILD=true next build",
    "electron:pack": "npm run electron:build && electron-builder",
    "electron:dist": "npm run electron:build && electron-builder --publish=never",
    "release": "npm run electron:build && electron-builder --publish=always",
    "release:draft": "npm run electron:build && electron-builder --publish=onTagOrDraft",
    "db:init": "node scripts/init-sqlite.js",
    "postinstall": "npm run db:init && npx @electron/rebuild",
    "rebuild": "npx @electron/rebuild"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "better-sqlite3": "^9.2.2",
    "chart.js": "^4.5.0",
    "crypto-js": "^4.2.0",
    "framer-motion": "^12.23.6",
    "googleapis": "^153.0.0",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "daisyui": "^5.0.50",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "@electron/rebuild": "^3.6.0",
    "electron-updater": "^6.1.7",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "tailwindcss": "^4.1.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dashboard.app",
    "productName": "Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/database/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USERNAME",
        "repo": "Dashboard"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "publisherName": "Dashboard App"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
